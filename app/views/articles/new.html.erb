<h1>New article</h1>

<% @article = Article.new %>

<%= form_with model: @article, url: articles_path, data:{turbo: false} do |f| %> 
<!-- можно написати ....., url: '/articles'... -->

	<p>
		<!-- Title<br /> -->
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :text %><br />
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>