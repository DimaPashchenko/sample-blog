<h1><%= @article.title %></h1>
<p><%= @article.text %></p>

<p>
	<%= form_with(model: [@article, @article.comments.build], local: true, data:{turbo: false}) do |f| %> 

	<p>
		<%= f.label :author %><br/>
		<%= f.text_field :author %>
	</p>

	<p>
		<%= f.label :body %><br/>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
</p>